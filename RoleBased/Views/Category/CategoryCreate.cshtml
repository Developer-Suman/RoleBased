@model RoleBased.Models.ViewModel.CategoryViewModel
<div class="row">
    <div class="col-md-4">
        <form method="POST" asp-action="CategoryDisplay" enctype="multipart/form-data">
            <h2>Create</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-control">
                <input type="hidden" asp-for="CategoriesId" />
                <input type="text" asp-for="CategoriesName" class="form-control" aria-required="true" />
                <label asp-for="CategoriesName">Name</label>
                <span asp-validation-for="CategoriesName">Save</span>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>
