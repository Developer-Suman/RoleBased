@model RoleBased.Models.ViewModel.MaterialsIndexVM;

<div class="container m-0" >

    <div class="row">
        <div class="col-lg-12 col-xl-12 col-md-12 col-sm-7">
            <div class="card m-0">
                <div class="card-header border-bottom-0">
                    <h4 class="card-title">Update Materials</h4>
                </div>
                <div class="card-body">
                    <form asp-action="MaterialsUpdate" method="post" enctype="multipart/form-data">
                        <div class="form-group row">

                            <div class="col-md-12">
                                <input type="hidden" asp-for="MaterialsViewModel.userId" />
                                <input type="hidden" asp-for="MaterialsViewModel.materialsId" />
                                <label for="inputName" class="col-md-12 form-label">Materials Name</label>
                                <input type="text" asp-for="MaterialsViewModel.materialName" class="form-control" id="inputName" placeholder="Name">
                                <span asp-validation-for="MaterialsViewModel.materialName" class="text-danger"></span>
                                <label for="inputName" class="col-md-12 form-label">Amount</label>
                                <input type="text" asp-for="MaterialsViewModel.Amount" class="form-control" id="inputName" placeholder="Amount">
                                <span asp-validation-for="MaterialsViewModel.Amount" class="text-danger"></span>


                                <div class="form-group">
                                    <label for="title">Materials Image:</label>
                                    <input type="file" asp-for="MaterialsViewModel.File" class="form-control" />
                                    <input type="hidden" asp-for="MaterialsViewModel.Image"/>
                                    @* <input type="file" class="form-control" asp-for="MaterialsViewModel.File" placeholder="Materials Image">*@
                                </div>




                             



                            </div>



                        </div>


                        <div class="form-group mb-0 mt-4 row justify-content-end">
                            <div class="col-md-9">
                                <input class="btn btn-primary" type="submit" value="UpdateMaterials" class="btn btn-primary" />

                                <button class="btn btn-outline-dark  w-30 mr-2 " type="button" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/js/site.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script src="~/lib/JqueryToast/jquery.toast.js"></script>
<script>
    $.ajax({
        url: '/Materials/MaterialsUpdate',
        type: 'POST',
        data: materialsViewModel, // Ensure materialsViewModel is correctly populated
        success: function (data) {
            if (data === true) {
                console.log('Server returned true');
                // Your toast and other code here
            }
        },
        error: function () {
            console.log('Error in AJAX request');
        }
    });

</script>
